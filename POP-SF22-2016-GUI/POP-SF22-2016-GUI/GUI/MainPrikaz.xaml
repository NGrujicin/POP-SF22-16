<Window x:Class="POP_SF22_2016_GUI.GUI.MainPrikaz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF22_2016_GUI.GUI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="MainPrikaz" Height="450" Width="550">
    <StackPanel>
        <Grid>
           
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Name="btNamestaji" Content="Namestaji" Grid.Column="0" Height="40"></Button>
            <Button Name="btAkcije" Content="Akcije" Grid.Column="1" Height="40"></Button>
            <Button Click="btKorisnici_Click" Name="btKorisnici" Content="Korisnici" Grid.Column="2" Height="40"></Button>
            <Button Name="btTipoviNamestaja" Content="Tipovi Namestaja" Grid.Column="3" Height="40"></Button>
        
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <DataGrid IsReadOnly="True" CanUserAddRows="False" SelectedItem="{Binding Path=Objekat}" Name="dgMainPrikaz" Width="550" Height="300" Margin="0 10 0 10"></DataGrid>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Name="btDodaj" Content="Dodaj" Grid.Column="0" Height="40" Margin="0 10 0 10"></Button>
            <Button Name="btIzmeni" Content="Izmeni" Grid.Column="1" Height="40" Margin="0 10 0 10"></Button>
            <Button Name="btIzbrisi" Content="Izbrisi" Grid.Column="2" Height="40" Margin="0 10 0 10"></Button>
            <Button Click="btNazad_Click" Name="btNazad" Content="Nazad" Grid.Column="3" Height="40" Margin="0 10 0 10"></Button>
        </Grid>

       
        
        
        
        
        
        
    </StackPanel>
</Window>
